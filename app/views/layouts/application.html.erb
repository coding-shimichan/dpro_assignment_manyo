<!DOCTYPE html>
<html>
  <head>
    <title>CdpWebManyoTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <ul>
        <li><%= link_to t("defaults.navigations.tasks"), tasks_path, id: "tasks-index" %></li>
        <li><%= link_to t("defaults.navigations.new_task"), new_task_path, id: "new-task" %></li>
      </ul>
    </nav>
    
    <div>
      <% flash.each do |key, message| %>
        <%= content_tag :div, message, :id => key %>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
