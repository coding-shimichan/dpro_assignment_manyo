<h1><%= t(".title") %></h1>

<div id="users-area">
  <table id="users-table">
    <thead>
      <tr>
        <th><%= t("activerecord.attributes.user.name") %></th>
        <th><%= t("activerecord.attributes.user.email") %></th>
        <th><%= t("activerecord.attributes.user.admin") %></th>
        <th><%= t("activerecord.attributes.user.task_count") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="user-name"><%= user.name %></td>
          <td class="user-email"><%= user.email %></td>
          <td class="user-admin"><%= t("enums.user.admin.#{user.admin}") %></td>
          <td class="user-task-count"><%= user.tasks.length %></td>
          <td><%= link_to t('helpers.show'), admin_user_path(user), class: "show-user" %></td>
          <td><%= link_to t('helpers.edit'), edit_admin_user_path(user), class: "edit-user" %></td>
          <td><%= link_to t('helpers.destroy'), admin_user_path(user), method: :delete, local: true, data: { confirm: t('helpers.confirm') }, class: "destroy-user" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>