<%= form_with(scope: :session, url: sessions_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :email, t("activerecord.attributes.user.email") %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :password, t("activerecord.attributes.user.password") %>
    <%= form.text_field :password %>
  </div>

  <div class="actions">
    <%= form.submit t("helpers.login"), id: "create-session" %>
  </div>
<% end %>
