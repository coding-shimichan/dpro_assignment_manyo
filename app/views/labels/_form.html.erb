<%= form_with(model: label, local: true) do |form| %>
  <% if label.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(label.errors.count, "error") %> prohibited this label from being saved:</h2>

      <ul>
        <% label.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control w-100" %>
  </div>

  <div class="actions">
    <% button_label = label.persisted? ? t('helpers.submit.update', model: "label") : t('helpers.submit.create', model: "label") %>
    <% button_id = label.persisted? ? "update-label" : "create-label" %>
    <%= form.submit button_label, id: button_id, class: "btn btn-primary" %>
  </div>
<% end %>
